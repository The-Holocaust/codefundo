<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/s"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    tools:context=".helper_signup">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the following details"
        android:textSize="23dp"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="19dp"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"/>

    <EditText
        android:id="@+id/etname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="ex.John"
        android:layout_marginTop="30px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email-Id:"
        android:textSize="19dp"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px" />

    <EditText
        android:id="@+id/etemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="example@example.com"
        android:layout_marginTop="30px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone No.:"
        android:textSize="19dp"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px" />

    <EditText
        android:id="@+id/etphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="ex. 7899340176"
        android:layout_marginTop="30px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DOB:"
        android:textSize="19dp"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px" />

    <EditText
        android:id="@+id/etdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:layout_marginTop="30px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="50px"
        android:text="Do you agree with the terms and conditions"
        android:textSize="15dp" />

    <RadioGroup
        android:id="@+id/rbgagdonag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/rbagree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I Agree"
        android:layout_marginTop="30px"
        android:layout_marginLeft="50px"/>

    <RadioButton
        android:id="@+id/rbnotagree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I Don't Agree"
        android:layout_marginTop="30px"
        android:layout_marginLeft="50px" />
    </RadioGroup>

    <Button
        android:id="@+id/bttnnext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:text="Next"
        android:layout_marginTop="100px"
        android:layout_marginLeft="120px"
        android:layout_marginRight="120px"/>

    <Button
        android:id="@+id/bttnback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:text="Back"
        android:layout_marginTop="50px"
        android:layout_marginLeft="120px"
        android:layout_marginRight="120px"
        android:layout_marginBottom="50px"/>

</LinearLayout>
</ScrollView>